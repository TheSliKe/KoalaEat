{% extends 'base.html.twig' %}

{% block title %}Dashboard Restaurateur{% endblock %}

{% block customstylesheets %}
    <style>
        body {
            background-image: url('../images/backRest.jpg');
            background-size: cover;
        }
    </style>
{% endblock %}

{% block navbaritems %}

 
    <div class="navbar-nav">
        <a class="nav-link active" href="/dashboard/restaurateur">Dashboard</a>
        <a class="nav-link" href="/profil/restaurateur">Profil</a>
    </div>
    
    <form>
        <button class="btn me-2" type="button" onclick='window.location.href = "/logout"' style="background-color: #9d3822; color: #FFFFFF">Déconnexion</button>
    </form>

{% endblock %}

{% block body %}

<div class="container">
    <div class="row">

        <div class="col">
            <div class="card mx-auto" style="width: 30rem; height: 45rem; margin-top: 15px">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Plats</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Mes plats proposés :</h6>
                   
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Plat</th>
                                <th scope="col">Prix</th>
                                <th scope="col">Stock</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">poulets</th>
                                <td>8</td>
                                <td>12</td>
                                <td>
                                    <button type="button" class="btn btn-outline-secondary">Edit</button>
                                    <button type="button" class="btn btn-outline-danger">Supp</button>
                                </td>
                            </tr>                        
                        </tbody>
                    </table>
                    
                    <button type="button" data-bs-toggle="modal" data-bs-target="#addPlatModal" class="btn btn-outline-primary mt-auto" style="margin-bottom: 2px">Ajouter</button>
                   
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card mx-auto" style="width: 30rem; height: 45rem; margin-top: 15px">
                <div class="card-body">
                    <h5 class="card-title">Commandes</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Mes commandes :</h6>
                   
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">N°</th>
                                <th scope="col">Status</th>
                                <th scope="col">Details</th>
                                <th scope="col">Heure</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">0</th>
                                <td>
                                    Accepté
                                    <button type="button" class="btn btn-outline-success">Détails</button>
                                </td>
                                <td><button type="button" class="btn btn-outline-secondary">Détails</button></td>
                                <td>18H45</td>
                            </tr>                        
                        </tbody>
                    </table>


                </div>
            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="addPlatModal" tabindex="-1" aria-labelledby="addPlatModallabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addPlatModallabel">Ajouter un plat</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
               {{ form_start(creerPlatType) }}
                    {{ form_row(creerPlatType.PA_Libelle, {label : "Nom :"}) }}
                    {{ form_row(creerPlatType.PA_Prix, {label : "Preom :"}) }}
                    {{ form_row(creerPlatType.PA_Stock, {label : "Stock :"}) }}
                    {{ form_row(creerPlatType.FK_RE, {label : "Restaurant :"}) }}
               {{ form_end(creerPlatType) }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-primary">Sauvegarder</button>
            </div>
        </div>
    </div>
</div>


{% endblock %}
