{% extends 'base.html.twig' %}

{% block title %}Dashboard Restaurateur{% endblock %}

{% block customstylesheets %}
    <style>
        body {
            background-image: url('../images/backRest.jpg');
            background-size: cover;
        }
    </style>
{% endblock %}

{% block navbaritems %}

 
    <div class="navbar-nav">
        <a class="nav-link active" href="/dashboard/restaurateur">Dashboard</a>
        <a class="nav-link" href="/profil/restaurateur">Profil</a>
    </div>
    
    <form>
        <button class="btn me-2" type="button" onclick='window.location.href = "/logout"' style="background-color: #9d3822; color: #FFFFFF">DÃ©connexion</button>
    </form>

{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col">
            <div class="card mx-auto mt-4" style="width: 50rem; height: 45rem;">
                <div class="card-body d-flex flex-column">
                   
                    <ol class="list-group list-group-numbered">

                        <h3 class="card-title">Mes restaurants</h3>
                        {% for restaurant in listeRestaurant %}

                            <li class="list-group-item d-flex justify-content-between align-items-start" onclick = 'window.location.href="/dashboard/restaurant/view/{{ restaurant.getId() }}"'>
                                <div class="ms-2 me-auto">
                                <div class="fw-bold">{{ restaurant.getRELibelle() }}</div>
                                {{ restaurant.getREAdresse() }}
                                </div>
                                <span class="badge bg-dark rounded-pill">{{ restaurant.getCommandes()|length }}</span>
                            </li>
                    
                        {% endfor %}
                    </ol>

                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
